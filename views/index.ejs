<section class="articles">
    <h2 class="articles__heading"></h2>Ultimas Postagens</h2>

    <ul class="article-ul">

        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>

        <% }) %>

       
    </ul>
    <% if (nextPage !== null) { %>
     <!-- checar se tem uma nextPage -->
     
         <a href="/?page=<%= nextPage %>"  class="pagination">&lt; Ver Postagens mais Antigos</a>
    <% } %>

</section>
